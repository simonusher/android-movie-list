<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/movieIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/movieNameTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/movieIconImageView"
        android:text="TextView"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/movieCategoryTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieNameTextViewMain"
        android:layout_toEndOf="@+id/movieIconImageView"
        android:text="TextView" />

    <View
        android:id="@+id/rule"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/movieIconImageView"
        android:background="@color/divider">
    </View>
</RelativeLayout>